#include<stdio.h>
int circle();
int rect(int);
int triangle(int,int,int);
int circle()
{
    int r;
    printf("enter radius");
    scanf("%d",&r);
    float res=3.14*r*r;
    printf("the are is %f",res);
}
int rect(int length)
{
    int breadth;
    printf("enter breadth");
    scanf("%d",&breadth);
    printf("the area is %d",length*breadth);
}
int triangle(int a,int b,int c)
{
    printf("the perimeter is %d",a+b+c);
}
    void main()
    {
        int a;
        printf("\n1.circle");
        printf("\n2.rectangle");
        printf("\n3.triangle");
        printf("enter ur choice:");
        scanf("%d",&a);
        switch(a)
        {
            case 1:circle();
                   break;
            case 2:rect(20);
                   break;
            case 3:triangle(10,20,30);
                   break;
            default:printf("invalid choice:");
        }
    }
